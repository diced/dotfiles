[colors]
background = #1b1e24
hover = #272b33
blue = #3498db
white = #fff
red = #f71616
green = #06c26d

[bar/bar]
enable-ipc = true
height = 25
#width = 100%
bottom = false

background = ${colors.background}
foreground = ${colors.blue}

line-size = 2
padding = 0

font-0=JetbrainsMono Nerd Font:size=10;1
font-1=Siji:size=10;1

modules-left = bspwm 
modules-center = polywins
modules-right = eth battery pulseaudio cpu memory time

scroll-up = bspwm-wsnext
scroll-down = bspwm-wsprev

wm-restack = bspwm
override-redirect = false
tray-position = right

; module ???

[module/polywins]
type = custom/script
exec = ~/.config/polybar/polywins.sh 2>/dev/null
format = <label>
label = %output%
label-padding = 1
tail = true

[module/xwindow]
type = internal/xwindow
label = %title:0:50:...%
label-foreground = ${colors.white} 
label-background = ${colors.background} 
label-padding = 2


[module/bspwm] 
type = internal/bspwm 
format = <label-state> <label-mode> 
format-foreground = ${colors.blue} 
format-background = ${colors.background} 
index-sort = true
enable-click = true
reverse-scroll = false

label-focused = %index%
label-focused-underline = ${colors.blue}
label-focused-padding = 1
label-focused-background = ${colors.hover}

label-occupied = %index%
label-occupied-foreground = #b8b8b8
label-occupied-padding = 1

label-empty = %index%
label-empty-foreground = #666
label-empty-padding = 1

label-urgent = 
label-urgent-padding = 1
label-urgent-foreground = ${colors.red}


[module/cpu]
type = internal/cpu

interval = 2
format-prefix = " "
format-prefix-foreground = ${colors.blue}
format-padding = 1
format-foreground = ${colors.white}
label = %percentage%%

[module/memory]
type = internal/memory

interval = 2

format-padding = 1
format-prefix = " "
format-prefix-foreground = ${colors.blue}
format-foreground = ${colors.white}

label = %mb_used% (%percentage_used%%)

[module/wlan]
type = internal/network
interface = wlo1
interval = 3.0

format-disconnected-padding = 1
format-connected-padding = 1

format-connected-prefix = " "
format-connected-foreground = ${colors.green}
label-connected = %ifname% %downspeed%
label-connected-foreground = ${colors.green}

format-disconnected-prefix = " "
format-disconnected-foreground = ${colors.red}
label-disconnected = disconnected
label-disconnected-foreground = ${colors.red}


[module/eth]
type = internal/network
interface = eno1
interval = 3.0

format-disconnected-padding = 1
format-connected-padding = 1

format-connected-prefix = " "
format-connected-foreground = ${colors.green}

label-connected = %ifname% %downspeed%
label-connected-foreground = ${colors.green}

format-disconnected-prefix = " "
format-disconnected-foreground = ${colors.red}

label-disconnected = disconnected
label-disconnected-foreground = ${colors.red}


[module/time]
type = internal/date
interval = 1.0
format-margin = 0

time = %I:%M:%S %p
time-alt = %Y-%m-%d%

format-prefix = " "
format-prefix-foreground = ${colors.blue}

format = <label>
format-padding = 1

label-foreground = ${colors.white}
label = %time%

[module/battery]
type = internal/battery

battery = BAT0
adapter = ADP1

poll-interval = 5
format-charging = <animation-charging> <label-charging>
format-charging-padding = 1
format-charging-foreground = ${colors.green}

format-discharging = <animation-discharging> <label-discharging>
format-discharging-padding = 1
format-discharging-foreground = ${colors.red}

format-full = <ramp-capacity> <label-full>
format-full-padding = 1
format-full-foreground = ${colors.green}

label-charging = %percentage%%
label-discharging = %percentage%%
label-full = %percentage%%

ramp-capacity-0 = "%{T2}"
ramp-capacity-1 = "%{T2}"
ramp-capacity-2 = "%{T2}"
ramp-capacity-3 = "%{T2}"
ramp-capacity-4 = "%{T2}"

animation-discharging-0 = "%{T2}"
animation-discharging-1 = "%{T2}"
animation-discharging-2 = "%{T2}"
animation-discharging-3 = "%{T2}"
animation-discharging-framerate = 750

animation-charging-0 = "%{T2}"
animation-charging-1 = "%{T2}"
animation-charging-2 = "%{T2}"
animation-charging-3 = "%{T2}"
animation-charging-framerate = 750

[module/pulseaudio]
type = internal/pulseaudio

click-middle = pavucontrol &
format-volume-padding = 1
format-volume = <label-volume>
format-volume-prefix = " "
format-volume-prefix-foreground = ${colors.blue}
label-volume = %percentage%%

interval = 5

format-volume-foreground = ${colors.white}
format-volume-background = ${colors.background}

label-muted =  muted
label-muted-foreground = ${colors.red}


[settings]
screenchange-reload = true

[global/wm]
margin-top = 0
margin-bottom = 0
